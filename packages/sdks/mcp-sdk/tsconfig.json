{
  "compilerOptions": {
    "rootDir": "./",
    "target": "es2020",
    "lib": ["es2020", "dom"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": false,
    "noErrorTruncation": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "test"]
}
